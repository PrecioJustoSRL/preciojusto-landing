// @ts-ignore
import { Icon } from "astro-icon";

const features = [
  {
    title: "Certificaciones y Garantías",
    description:
      "Garantizamos productos médicos certificados para fortalecer la confianza y seguridad de nuestros clientes.",
    icon: "bx:bx-shield",
  },
  {
    title: "Donaciones y Trabajo Social",
    description:
      "Contribuimos al bienestar social mediante donaciones y participación activa en actividades comunitarias.",
    icon: "bx:bx-dollar",
  },
  {
    title: "Alianzas estratégicas",
    description:
      "Formamos alianzas con entidades médicas para ampliar nuestro alcance y visibilidad en el mercado.",
    icon: "bx:bx-clinic",
  },
  {
    title: "Velamos por los mas necesitados",
    description:
      "Dedicamos gran parte de nuestros ingresos para ayudar a las personas que más lo necesitan.",
    icon: "bx:bxs-data",
  },
  {
    title: "Tecnologías de Vanguardia",
    description:
      "Invertimos en innovación tecnológica para ofrecer productos de calidad y mantener nuestra competitividad.",
    icon: "bx:bx-tab",
  },
  {
    title: "Involucramos al Paciente",
    description:
      "Proporcionamos información clara a los pacientes, permitiéndoles elegir entre diferentes implantes.",
