  {
    title: "Contacto",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
          <a class="flex items-center" href="/" class="text-lg">
            <LogoPrecioJusto />
            <span class="font-bold text-xl text-blue-800 px-2">PrecioJustoSRL</span>
          </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-8 h-8 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-900 hover:text-blue-800 text-lg">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="https://tienda.preciojusto.pro/" style="muted" block size="md">Ingresar</Link>
          <!-- <Link href="#" size="md" block>Sign up</Link> -->
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="https://tienda.preciojusto.pro/" size="md">Ingresar</Link>
      </div>
    </div>
  </header>
</Container>
